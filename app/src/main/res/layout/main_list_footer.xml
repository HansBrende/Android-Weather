<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonus_text_0"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="#6699bb"
        android:shadowColor="#334455"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonus_text_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bonus_text_0"
        android:textColor="#6699bb"
        android:shadowColor="#334455"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonus_text_2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bonus_text_1"
        android:textColor="#6699bb"
        android:shadowColor="#334455"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonus_text_3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bonus_text_2"
        android:textColor="#6699bb"
        android:shadowColor="#334455"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:paddingTop="5dp" />

</RelativeLayout>